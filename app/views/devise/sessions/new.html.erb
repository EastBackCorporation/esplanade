<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<div class="container">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <form class="form-signin">
      <h2 class="form-signin-heading"><%= t('.sign_in', :default => "Sign in") %></h2>
      <label for="inputEmail" class="sr-only">Email address</label>
      <%= f.text_field :login, class: "form-control", placeholder: "Email or Name" %>
      <label for="inputPassword" class="sr-only">Password</label>
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      <% if devise_mapping.rememberable? -%>
      <%= f.submit t('.sign_in', :default => "Sign in"), class: "btn btn-lg btn-primary btn-block" %>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> <%= t('.remember_me', :default => "Remember Me") %>
        </label>
      </div>
      <% end -%>
    </form>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div> <!-- /container -->

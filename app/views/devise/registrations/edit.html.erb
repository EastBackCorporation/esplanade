<div class="container">
  <div class=" col-sm-10">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put , class: "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :username,class: "col-sm-4 control-label" %>
        <div class="col-sm-8 ">
          <%= f.text_field :username, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email,class: "col-sm-4 control-label" %>
        <div class="col-sm-8 ">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <%- if devise_mapping.confirmable? && resource.pending_reconfirmation? -%>
        <p>
        <%= t('.currently_waiting_confirmation_for_email', :email => resource.unconfirmed_email, :default => "Currently waiting confirmation for: %{email}") %>
        </p>
      <%- end -%>

      <div class="form-group">
        <%= f.label :password,class: "col-sm-4 control-label" %>
        <div class="col-sm-8 ">
          <%= f.password_field :password, placeholder: t('.leave_blank_if_you_don_t_want_to_change_it', :default => "leave blank if you don't want to change it") , autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,class: "col-sm-4 control-label" %>
        <div class="col-sm-8 ">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password,class: "col-sm-4 control-label" %>
        <div class="col-sm-8 ">
          <%= f.password_field :current_password, placeholder: t('.we_need_your_current_password_to_confirm_your_changes', :default => 'we need your current password to confirm your changes'), autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="btn btn-default" onclick="document.getElementById('user_image').click()">画像</div>
        <img src="<%= current_user.image.thumb.url %>" id="preview" width="50px">
        <div hidden="hidden" onchange="reader=new FileReader();file=document.getElementById('user_image');f=file.files;reader.readAsDataURL(f[0]);reader.onload =(function(){$('#preview').attr('src',reader.result);});"><%= f.file_field :image %></div>
        <%= f.hidden_field :image_cache %>
      </div>
      <div class="from-group">
        <% if current_user.image? %>
          <label>
            <%= f.check_box :remove_image %>remove
          </label>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit t('.update', :default => "Update"), class: "btn btn-primary col-sm-10 col-xs-12 col-sm-offset-2 " %>
      </div>
      <div class="row">
        <div class="pull-left">
          <%= link_to t('devise.shared.links.back', :default => "Back"), :back, class: "btn btn-default" %>
        </div>
        <div class="pull-right">
          <%= link_to t('.cancel_my_account', :default => "Cancel my account"), registration_path(resource_name), :data => { :confirm => t('.are_you_sure', :default => "Are you sure?")}, :method => :delete, class: "btn btn-danger"  %>
        </div>
      </div>
    <% end %>
  </div><!-- col-sm-10 -->

</div><!-- container -->

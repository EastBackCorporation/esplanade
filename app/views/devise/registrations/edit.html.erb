<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <%= f.label :username,class: "col-xs-12 col-sm-3 control-label"  %>
      <div class="col-xs-12 col-sm-6 ">
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <%= f.label :email,class: "col-xs-12 col-sm-3 control-label" %>
      <div class="col-xs-12 col-sm-6 ">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
  </div>
  <%- if devise_mapping.confirmable? && resource.pending_reconfirmation? -%>
    <p>
    <%= t('.currently_waiting_confirmation_for_email', :email => resource.unconfirmed_email, :default => "Currently waiting confirmation for: %{email}") %>
    </p>
  <%- end -%>

  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <%= f.label :password,class: "col-xs-12 col-sm-3 control-label" %>
      <div class="col-xs-12 col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <%= f.label :password_confirmation,class: "col-xs-12 col-sm-3 control-label" %>
      <div class="col-xs-12 col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <%= f.label :current_password,class: "col-xs-12 col-sm-3 control-label" %>
      <div class="col-xs-12 col-sm-6">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <label class="control-label col-xs-12 col-sm-3">プロフィール画像</label>
      <div class="col-xs-12 col-sm-6">
        <div class="btn" onclick="document.getElementById('user_image').click()">
          <img src="<%= current_user.image.thumb.url %>" id="preview" width="50px">
        </div> <div hidden="hidden" onchange="$('#preview').hide();reader=new FileReader();file=document.getElementById('user_image');f=file.files;reader.readAsDataURL(f[0]);reader.onload =(function(){$('#preview').show();$('#preview').attr('src',reader.result);});"><%= f.file_field :image %></div>
        <% if current_user.image? %>
          <label>
            <%= f.check_box :remove_image %>画像削除
          </label>
        <% end %>
        <%= f.hidden_field :image_cache %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <div class="col-xs-12 col-sm-9">
        <%= f.submit t('.update', :default => "Update"), class: "btn btn-primary form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <div class="col-xs-12 col-sm-9">
        <div class="pull-left">
          <%= link_to t('devise.shared.links.back', :default => "Back"), :back, class: "btn btn-default" %>
        </div>
        <div class="pull-right">
          <%= link_to t('.cancel_my_account', :default => "Cancel my account"), registration_path(resource_name), :data => { :confirm => t('.are_you_sure', :default => "Are you sure?")}, :method => :delete, class: "btn btn-danger"  %>
        </div>
      </div>
    </div>
  </div>
<% end %>

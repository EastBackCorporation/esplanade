<div class="container">
  <div class=" col-sm-10">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-gourp">
      <%= f.label :email,class: "col-sm-4 control-label" %>
      <div class="col-sm-8 ">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-gourp">
      <%= f.label :username,class: "col-sm-4 control-label" %>
      <div class="col-sm-8 ">
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>
    <div class="form-gourp">
      <%= f.label :password,class: "col-sm-4 control-label" %>
      <div class="col-sm-8 ">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-gourp">
      <%= f.label :password_confirmation,class: "col-sm-4 control-label" %>
      <div class="col-sm-8 ">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="form-gourp">
      <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary col-sm-10 col-sm-offset-2 " %>
    </div>
    <% end %>
    <div class="text-right">
      <%= render "devise/shared/links" %>
      </div>
  </div><!-- col-sm-10 -->
</div><!-- container -->

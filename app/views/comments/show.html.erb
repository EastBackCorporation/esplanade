<p id="notice"><%= notice %></p>

<p>
  <strong>Value:</strong>
  <%= @comment.value %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @comment.topic_id %>
</p>

<p>
  <strong>User:</strong>
  <%= @comment.user_id %>
</p>

<p>
  <strong>Image:</strong>
  <% if @comment.image? %>
  <div class="thumbnail">
    <%= image_tag @comment.image.url %>
  </div>
  <% end %>
</p>
<%= link_to 'Edit', edit_comment_path(@comment) %> |
<%= link_to 'Back', comments_path %>

<% breadcrumb :index_user %>
<div class="container">
  <div class="row center-block col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <ul class="users">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>名前</th>
            <th>メール</th>
            <th>ステータス</th>
            <th>権限</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.username, user %></td>
            <td><%= user.email %></td>
            <td><%= I18n.t("user_status.#{user.status}") %></td>
            <td><%= "管理者" if user.admin? %></td>
            <td class="col-xs-1"><%= link_to edit_user_path(user) do %>
              <span class=" btn btn-success glyphicon glyphicon-edit"></span>
            <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </ul>
  </div>
</div>

<ul class="users">
  <div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>名前</th>
          <th>メール</th>
          <th>権限</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user %></td>
          <td><%= user.email %></td>
          <td><%= "管理者" if user.admin? %></td>
        </tr>
      <% end %>
    </table>
  </div>
</ul>

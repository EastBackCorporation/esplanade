<%= form_for([:admin,@comment]) do |f| %>
  <%= f.hidden_field :topic_id %>
  <%= f.hidden_field :user_id %>
  <form class="form-horizontal">
    <fieldset>
      <div class="form-group">
        <%= f.bootsy_area :value, class: "form-control",rows: "10" %>
      </div>
      <div class="form-group">
        <% Comment.statuses.each_key do |s|%>
          <div class="radio">
            <label>
              <input type="radio" value="option1" checked="">
              <% check = @comment.status == s ? "checked" : ""%>
              <%= f.radio_button :status, s, checked: check %><%= I18n.t("comment_status.#{s}") %>
            </label>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <div class="pull-right">
          <%= f.submit class: "btn btn-primary"%>
        </div>
      </div>
    </fieldset>
  </form>
<% end %>

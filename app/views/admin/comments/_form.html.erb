<%= form_for([:admin,@comment]) do |f| %>
  <%= f.hidden_field :topic_id %>
  <%= f.hidden_field :user_id %>
  <form class="form-horizontal">
    <span class="form-control label label-default"><%= @username %></span>
    <fieldset>
      <div class="form-group">
        <%= f.text_area :value, class: "form-control", rows: "3" %>
      </div>
      <div class="form-group">
        <% if @comment.image? %>
          <div class="thumbnail">
            <%= image_tag @comment.image.url %>
          </div>
        <% end %><br>
        <div class="btn btn-default" onclick="document.getElementById('comment_image').click()">画像</div>
        <img src="" id="preview" width="50px" hidden="hidden">
        <div hidden="hidden" onchange="$('#preview').hide();reader=new FileReader();file=document.getElementById('comment_image');f=file.files;reader.readAsDataURL(f[0]);reader.onload =(function(){$('#preview').show();$('#preview').attr('src',reader.result);});"><%= f.file_field :image %></div>
        <%= f.hidden_field :image_cache %>
      </div>
      <div class="from-group">
        <% if @comment.persisted? && @comment.image? %>
          <label>
            <%= f.check_box :remove_image %>画像削除
          </label>
        <% end %>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label">ステータス</label>
        <div class="col-lg-10">
          <% Comment.statuses.each_key do |s|%>
            <div class="radio">
              <label>
                <input type="radio" value="option1" checked="">
                <% check = @comment.status == s ? "checked" : ""%>
                <%= f.radio_button :status, s, checked: check %><%= I18n.t("comment_status.#{s}") %>
              </label>
            </div>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="pull-right">
          <%= f.submit class: "btn btn-primary"%>
        </div>
      </div>
    </fieldset>
  </form>
<% end %>

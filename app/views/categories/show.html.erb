<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @category.title %>
</p>

<p>
  <strong>Image:</strong>
  <% if @category.image? %>
  <div class="thumbnail">
    <%= image_tag @category.image.url %>
  </div>
  <% end %>
</p>

<%= link_to 'Edit', edit_category_path(@category) %> |

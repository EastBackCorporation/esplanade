<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :category_id %>
  <%= f.hidden_field :user_id %>
  <form class="form-horizontal">
    <fieldset>
      <div class="form-group">
        <label class="col-lg-2 control-label">タイトル</label>
        <div class="col-lg-10">
            <%= f.text_field :title, class: "form-control",  placeholder: "・・・について" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label">詳細</label>
        <div class="col-lg-10">
            <%= f.text_area :value, class: "form-control", rows: "3" %>
        </div>
      </div>
      <% if current_user.try(:admin?) %>
        <div class="form-group">
          <label class="col-lg-2 control-label">ステータス</label>
          <div class="col-lg-10">
            <% Topic.statuses.each_key do |s|%>
            <div class="radio">
              <label>
                <input type="radio" value="option1" checked="">
                <% check = @topic.status == s ? "checked" : ""%>
                <%= f.radio_button :status, s, checked: check %><%= I18n.t("topic_status.#{s}") %>
              </label>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="pull-left">
          <input type="button" class="btn btn-default" value="戻る" onclick="history.back()">
        </div>
        <div class="pull-right">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
  </form>
<% end %>

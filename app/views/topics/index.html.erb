<% breadcrumb :index_topic %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= link_to 'タイトル', controller: 'topics', action: 'index', page: 1, order: @order, column: 'title' %></th>
      <th><%= link_to '詳細', controller: 'topics', action: 'index', page: 1, order: @order, column: 'value' %></th>
      <th><%= link_to 'カテゴリー', controller: 'topics', action: 'index', page: 1, order: @order, column: 'categories.title' %></th>
      <th><%= link_to '作成者', controller: 'topics', action: 'index', page: 1, order: @order, column: 'users.username' %></th>
      <th><%= link_to 'ステータス', controller: 'topics', action: 'index', page: 1, order: @order, column: 'status' %></th>
      <th class="col-xs-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td class="long-text" title="<%= topic.title %>"><%= link_to topic.title, topic %></td>
        <td class="long-text" title="<%= topic.value %>"><%= topic.value %></td>
        <td class="long-text"><%= link_to topic.category.title,topic.category %></td>
        <td class="long-text"><%= link_to topic.user.username, topic.user %></td>
        <td class="long-text"><%= I18n.t "topic_status.#{topic.status}"%></td>
        <td class="col-xs-1"><%= link_to edit_topic_path(topic) do %>
            <span class=" btn btn-success glyphicon glyphicon-edit"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center"><%= paginate @topics %></div>
